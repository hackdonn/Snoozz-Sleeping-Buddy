<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Add any additional views or elements here -->

            <!-- Close icon -->
            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            app:tint="@color/secondary_text_dark"
            android:clickable="true"
            android:onClick="onCloseIconClick"
            android:src="@drawable/ic_close" />

        </RelativeLayout>


        <!-- Your Lottie animation view -->



            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/breathe_animation"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="@dimen/_230sdp"
                android:layout_gravity="center_horizontal"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/breathe_lottie_animation" />



        <!-- Start button -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:strokeColor="@color/secondary_text_dark"
            android:text="START"
            android:textColor="@color/secondary_text_dark"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/wiggly"
            android:padding="@dimen/_5sdp"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/_20sdp"
            android:elevation="@dimen/_10sdp"
            />

        <!-- Add any additional elements as needed -->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>